<?xml version="1.0" encoding="UTF-8"?>

<manifest>
    <include name="base/integration.xml" />
    <include name="bsp/integration-nxp.xml" />
    <include name="bsp/integration-tdx.xml" />
    <include name="bsp/integration-ti.xml"/>
    <include name="bsp/integration-rpi.xml" />
    <include name="bsp/integration-intel.xml" />
    <include name="bsp/integration-riscv.xml" />
    <!-- no integration branch for meta-imx, so use the latest release -->
    <include name="bsp/pinned-imx.xml" />

    <remote
        alias="repo"
        fetch="https://github.com/uptane"
        name="uptane" />

    <remote
        alias="repo"
        fetch="https://github.com/toradex"
        name="toradex-torizon" />

    <remote
        alias="repo"
        fetch="https://github.com/commontorizon"
        name="cmt" />

    <project
        name="yocto-docs"
        path="layers/yocto-docs"
        remote="yocto"
        revision="nanbield" />

    <project
        name="meta-security"
        path="layers/meta-security"
        remote="yocto"
        revision="nanbield" />

    <project
        name="meta-updater"
        path="layers/meta-updater"
        remote="uptane"
        revision="master" />

    <project
        name="meta-virtualization"
        path="layers/meta-virtualization"
        remote="yocto"
        revision="nanbield" />

    <project
        name="meta-toradex-distro.git"
        path="layers/meta-toradex-distro"
        remote="tdx"
        revision="master" />

    <project
        name="meta-toradex-security"
        path="layers/meta-toradex-security"
        remote="toradex-torizon"
        revision="kirkstone-6.x.y" />

    <project
        name="meta-common-torizon"
        path="layers/meta-common-torizon"
        remote="cmt"
        revision="nanbield">

        <linkfile
            dest="setup-environment"
            src="scripts/setup-environment" />
    </project>
</manifest>
